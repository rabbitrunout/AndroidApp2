<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_bg"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Аватар -->
        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/avatar_bg"
            android:padding="4dp"
            android:layout_marginTop="10dp"/>


        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Irina "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/coffee_text_primary"
            android:layout_marginTop="10dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@mail.com"
            android:textSize="15sp"
            android:textColor="@color/coffee_text_secondary"
            android:layout_marginTop="4dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/coffee_divider"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <!-- Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/statTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/coffee_text_primary"/>

                <TextView
                    android:id="@+id/statTotalOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders: 0"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/coffee_text_secondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Logout"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/coffee_primary"/>
    </LinearLayout>
</ScrollView>
